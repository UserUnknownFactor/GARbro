<Window x:Class="SchemeEditor.SelectTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Type" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select a type:" Margin="0,0,0,10"/>
        
        <ListBox Grid.Row="1" x:Name="TypeListBox" 
                 DisplayMemberPath="Name"
                 MouseDoubleClick="TypeListBox_MouseDoubleClick"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" 
                    Click="OK_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="75" 
                    Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>