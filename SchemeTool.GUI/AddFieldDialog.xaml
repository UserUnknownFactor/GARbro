<Window x:Class="SchemeEditor.AddFieldDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Field" Height="Auto" Width="500"
        WindowStartupLocation="CenterOwner" SizeToContent="Height">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Field Name:" FontWeight="Bold"/>
        <TextBox Grid.Row="1" x:Name="FieldNameTextBox" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Content="Field Type:" FontWeight="Bold"/>
        <ComboBox Grid.Row="3" x:Name="FieldTypeComboBox" 
                  Margin="0,0,0,10" SelectionChanged="FieldTypeComboBox_SelectionChanged"/>

        <Label Grid.Row="4" Content="Default Value:" FontWeight="Bold"/>
        <ScrollViewer Grid.Row="5" MaxHeight="200" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="DefaultValueContainer" Margin="0,0,0,10"/>
        </ScrollViewer>

        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" 
                    Click="OK_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="75" 
                    Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>