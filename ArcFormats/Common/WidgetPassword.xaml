<StackPanel x:Class="GameRes.Formats.WidgetPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="clr-namespace:GameRes.Formats.Strings"
             xmlns:p="clr-namespace:GameRes.Formats.Properties">
    <Label Content="{x:Static s:arcStrings.LabelPassphrase}" HorizontalAlignment="Left"/>
    <ComboBox x:Name="PasswordComboBox" 
              Width="200" 
              HorizontalAlignment="Left" 
              Margin="0,5,0,0"
              IsEditable="True"
              ItemsSource="{Binding PasswordHistory}"
              KeyDown="PasswordComboBox_KeyDown"
              LostFocus="PasswordComboBox_LostFocus"
              DropDownOpened="PasswordComboBox_DropDownOpened"
              SelectionChanged="PasswordComboBox_SelectionChanged">
        <ComboBox.ItemContainerStyle>
            <Style TargetType="ComboBoxItem">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding}" Value="--- Known Passwords ---">
                        <Setter Property="IsEnabled" Value="False"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="Gray"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ComboBox.ItemContainerStyle>
    </ComboBox>
</StackPanel>